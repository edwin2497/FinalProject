@model Presentation.Service2_Reference.CustomerList

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrative.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Insert New", "Insert", "Customer")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            FirstLastName
        </th>
        <th>
            SecondLastName
        </th>
        <th>
            CardId
        </th>
        <th>
            Password
        </th>
        <th>
            Email
        </th>
        <th>
            Phone
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.lists)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.ActionLink("Modify", "Modify", new { id = item.Id }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
